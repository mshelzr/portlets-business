<?xml version="1.0" encoding="UTF-8"?>
    <beans xmlns="http://www.springframework.org/schema/beans"  
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">  
      
      
      <!-- Para que Spring sepa que vamos a usar anotaciones -->  
     <context:annotation-config />  
   
     <!-- Desde donde tiene que escanear -->  
    <context:component-scan base-package="pe.com.ibk.halcon.promociones.controller" /> 
    
    
        <bean id="portletModeHandlerMapping"  
            class="org.springframework.web.portlet.handler.PortletModeHandlerMapping">  
            <property name="portletModeMap">  
                <map>  
                    <entry key="view" value-ref="carruselPromocionesController" />  
               </map>  
           </property>  
       </bean>  
       
              <!-- Default View Resolver -->  
       <bean id="viewResolver"  
           class="org.springframework.web.servlet.view.InternalResourceViewResolver">  
           <property name="cache" value="false" />  
           <property name="viewClass"  
               value="org.springframework.web.servlet.view.JstlView" />  
           <property name="prefix" value="/html/carruselPromocionesController/" />  
           <property name="suffix" value=".jsp" />  
       </bean>  
       
</beans>  
